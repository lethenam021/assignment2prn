@{
    var userId = Context.Session.GetInt32("UserId");
    var userRole = Context.Session.GetInt32("UserRole"); // ✅ đúng kiểu int
    var title = ViewData["Title"] as string ?? "FUNews";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FUNews</title>
    <meta name="description" content="FUNews Management" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />

    @RenderSection("Head", required: false)
</head>
<body>
    <header class="site-header" role="banner">
       

        <div class="auth-buttons">
            @if (userId == null)
            {
                <a href="/login" class="btn-login">Login</a>
            }
            @if (userRole == 1)  // Staff
            {
                <div class="logo" aria-label="FUNews">
           <span class="chip">Staff</span>
            </div>
                <div class="dropdown">
                    <a class="btn-page dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Page
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Home/Index">Trang chủ</a></li>
                        <li><a class="dropdown-item" href="/category">Category</a></li>
                        <li><a class="dropdown-item" href="/article">Bài viết</a></li>
                        <li><a class="dropdown-item" href="/Staff/Tags">Tags</a></li>
                    </ul>
                </div>
                <a asp-controller="Register" asp-action="Logout" class="btn btn-danger">Logout</a>
            }
            else if (userRole == 2) // Lecturer
            {
                <div class="logo" aria-label="FUNews">
                   <span class="chip">Lecturer</span>
                </div>
                <div class="dropdown">
                    <a class="btn-page dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Page
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Home/Index">Trang chủ</a></li>
                        <li><a class="dropdown-item" href="/Lecturer/News">Bài viết của tôi</a></li>
                    </ul>
                </div>
                <a asp-controller="Register" asp-action="Logout" class="btn btn-danger">Logout</a>
            }
            else if (userRole == 3) // Admin
            {

                <div class="logo" aria-label="FUNews">
                     <span class="chip">Admin</span>
                </div>
                <div class="dropdown">
                    <a class="btn-page dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Page
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Home/Index">Trang chủ</a></li>
                        <li><a class="dropdown-item" href="/account">Quản lý tài khoản</a></li>
                        <li><a class="dropdown-item" href="/Admin/Reports">Báo cáo & Thống kê</a></li>
                        <li><a class="dropdown-item" href="/Admin/Log">Nhật ký chỉnh sửa</a></li>
                    </ul>
                </div>
                <a asp-controller="Register" asp-action="Logout" class="btn btn-danger">Logout</a>
            }
            
        </div>
    </header>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer>© @DateTime.Now.Year FUNews Management</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
